user nginx;
worker_processes 2;

events {
    worker_connections 1024;
    accept_mutex off;
}

http {
    include mime.types;
    default_type application/octet-stream;
    merge_slashes off;
    gzip on;
    gzip_types application/json;

    {{range $dir := lsdir "/applications"}}
    upstream {{base $dir}} {
        {{$custdir := printf "/applications/%s/*" $dir}}{{range getvs $custdir}}
        server {{.}};
        {{end}}
    }

    server {
        server_name {{base $dir}}.cloudwalk.io;
        location / {
            proxy_pass http://{{base $dir}};
        }
    }
    {{end}}

}
